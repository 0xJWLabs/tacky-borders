{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StaticConfig",
  "type": "object",
  "properties": {
    "border_size": {
      "description": "Thickness of the window borders in pixels. (default: 2)",
      "type": "integer",
      "format": "int32"
    },
    "border_offset": {
      "description": "Adjusts border size relative to the window in pixels. (default: -1)",
      "type": "integer",
      "format": "int32"
    },
    "border_radius": {
      "description": "Corner radius for borders in pixels; -1 for auto. (default: -1)",
      "type": "integer",
      "format": "int32"
    },
    "window_rules": {
      "description": "Rules for border settings on specific windows.",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "match"
        ],
        "properties": {
          "match": {
            "description": "Type of match: 'Global', 'Class', or 'Title'.",
            "enum": [
              "Global",
              "Class",
              "Title"
            ],
            "type": "string"
          },
          "contains": {
            "description": "Value to match in window class or title.",
            "type": "string"
          },
          "match_strategy": {
            "description": "Matching strategy",
            "type": "string",
            "enum": [
              "Equals",
              "Regex",
              "Contains"
            ]
          },
          "active_color": {
            "description": "Color or gradient for active borders.",
            "oneOf": [
              {
                "type": "string",
                "examples": [
                  "#F5C2E7",
                  "#F5E0DCFF",
                  "rgb(137, 180, 250)",
                  "rgba(243, 139, 168, 1)"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "colors": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 2
                  },
                  "direction": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "minItems": 4,
                    "maxItems": 4
                  },
                  "animation": {
                    "type": "boolean",
                    "description": "Use animation on gradient."
                  }
                },
                "examples": [
                  {
                    "colors": [
                      "#F5C2E7",
                      "#F5E0DCFF"
                    ],
                    "direction": [
                      0,
                      0,
                      1,
                      0
                    ]
                  },
                  {
                    "colors": [
                      "rgba(137, 180, 250, 1)",
                      "rgba(243, 139, 168, 1)",
                      "rgba(255, 255, 255, 1)"
                    ],
                    "direction": [
                      0,
                      0,
                      1,
                      0
                    ]
                  }
                ],
                "required": [
                  "colors",
                  "direction"
                ]
              }
            ]
          },
          "inactive_color": {
            "description": "Color or gradient for inactive borders.",
            "oneOf": [
              {
                "type": "string",
                "examples": [
                  "#F5C2E7",
                  "#F5E0DCFF",
                  "rgb(137, 180, 250)",
                  "rgba(243, 139, 168, 1)"
                ]
              },
              {
                "type": "object",
                "properties": {
                  "colors": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "minItems": 2
                  },
                  "direction": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    },
                    "minItems": 4,
                    "maxItems": 4
                  },
                  "animation": {
                    "type": "boolean",
                    "description": "Use animation on gradient"
                  }
                },
                "examples": [
                  {
                    "colors": [
                      "#F5C2E7",
                      "#F5E0DCFF"
                    ],
                    "direction": [
                      0,
                      0,
                      1,
                      0
                    ]
                  },
                  {
                    "colors": [
                      "rgba(137, 180, 250, 1)",
                      "rgba(243, 139, 168, 1)",
                      "rgba(255, 255, 255, 1)"
                    ],
                    "direction": [
                      0,
                      0,
                      1,
                      0
                    ]
                  }
                ],
                "required": [
                  "colors",
                  "direction"
                ]
              }
            ]
          },
          "enabled": {
            "description": "Enables or disables this rule. (default: true)",
            "type": "boolean"
          }
        }
      }
    }
  },
  "required": [
    "border_size",
    "border_offset",
    "border_radius",
    "window_rules"
  ]
}
