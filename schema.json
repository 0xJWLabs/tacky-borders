{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TackyConfig",
  "type": "object",
  "properties": {
    "global": {
      "description": "Global rule for customizing border settings.",
      "type": "object",
      "required": [
        "border_size",
        "border_offset",
        "border_radius"
      ],
      "properties": {
        "border_size": {
          "description": "Thickness of the window borders in pixels. (default: 2)",
          "type": "integer",
          "format": "int32"
        },
        "border_offset": {
          "description": "Adjusts border size relative to the window in pixels. Positive values expand; negative values shrink. (default: -1)",
          "type": "integer",
          "format": "int32"
        },
        "border_radius": {
          "description": "Corner radius for borders in pixels; -1 to let the program decide automatically. (default: -1)",
          "oneOf": [
            {
              "type": "integer",
              "format": "int32",
              "minimum": -1,
              "description": "Corner radius for borders in pixels; -1 to let the program decide automatically. (default: -1)"
            },
            {
              "type": "string",
              "enum": [
                "Round",
                "SmallRound",
                "Square",
                "Auto"
              ],
              "description": "Corner radius for borders in enums; Auto to let the program decide automatically. (default: Auto)"
            }
          ]
        },
        "active_color": {
          "description": "Color or gradient for active (focused) window borders. Can be a single color string, gradient string or a gradient object.",
          "oneOf": [
            {
              "type": "string",
              "examples": [
                "#F5C2E7",
                "#F5E0DCFF",
                "rgb(137, 180, 250)",
                "rgba(243, 139, 168, 1)",
                "#89B4FA, #F5C2E7, to right",
                "gradient(#89B4FA, #F5C2E7, to right, false)"
              ]
            },
            {
              "type": "object",
              "properties": {
                "colors": {
                  "type": "array",
                  "description": "Array of color stops for gradient. Minimum of 2 colors required.",
                  "items": {
                    "type": "string"
                  },
                  "minItems": 2
                },
                "direction": {
                  "oneOf": [
                    {
                      "type": "object",
                      "description": "Represents the direction in which the gradient is applied. It is defined as a vector with start and end points, where the direction is indicated by coordinates ranging from (0,0) to (1,1), representing the normalized space of the gradient.",
                      "required": [
                        "start",
                        "end"
                      ],
                      "examples": [
                        {
                          "start": [
                            0.0,
                            0.0
                          ],
                          "end": [
                            1.0,
                            0.0
                          ]
                        }
                      ],
                      "properties": {
                        "start": {
                          "type": "array",
                          "maxItems": 2,
                          "minItems": 2,
                          "description": "The starting point of the gradient, specified as sequence [x, y]. It determines where the gradient begins.",
                          "items": {
                            "type": "number",
                            "format": "float",
                            "description": "The coordinate of the starting point of the gradient, represented as a float value between 0 and 1."
                          }
                        },
                        "end": {
                          "type": "array",
                          "maxItems": 2,
                          "minItems": 2,
                          "description": "The ending point of the gradient, specified as sequence [x, y]. It determines where the gradient begins.",
                          "items": {
                            "type": "number",
                            "format": "float",
                            "description": "The coordinate of the ending point of the gradient, represented as a float value between 0 and 1."
                          }
                        }
                      }
                    },
                    {
                      "type": "string",
                      "description": "Represents the direction in which the gradient is applied. It is defined as direction string",
                      "examples": [
                        "to right",
                        "to left",
                        "45deg",
                        "90deg"
                      ]
                    }
                  ]
                },
                "animation": {
                  "type": "boolean",
                  "description": "If true, enables animation for the gradient. (Default: false)"
                }
              },
              "examples": [
                {
                  "colors": [
                    "#F5C2E7",
                    "#F5E0DCFF"
                  ],
                  "direction": {
                    "start": [
                      0.0,
                      0.0
                    ],
                    "end": [
                      1.0,
                      1.0
                    ]
                  }
                },
                {
                  "colors": [
                    "#F5C2E7",
                    "#F5E0DCFF"
                  ],
                  "direction": "to right"
                }
              ],
              "required": [
                "colors",
                "direction"
              ]
            }
          ]
        },
